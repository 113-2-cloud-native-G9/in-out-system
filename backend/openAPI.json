{
  "openapi": "3.0.3",
  "info": {
    "title": "Yoyo點點名 API Test",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000",
      "description": "Local development server"
    },
    {
      "url": "https://api.server.production/v1"
    }
  ],
  "paths": {
    "/api/v1/employees": {
      "post": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "新增員工資訊",
        "description": "新增員工資訊",
        "operationId": "addEmployee",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/v1_employees_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Employee successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/employees/{employee_id}": {
      "get": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "取得當前員工資訊",
        "description": "Fetches the details of a specific employee by their ID.",
        "operationId": "getEmployee",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "description": "The unique identifier for the employee.",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "12345"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee information successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_1"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "編輯員工資訊",
        "description": "Updates the information of an existing employee.",
        "operationId": "editEmployee",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "description": "The unique identifier for the employee.",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "12345"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/employees_employee_id_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Employee information successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_2"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/employees/reset-password": {
      "post": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "修改密碼",
        "description": "Allows an employee to reset their password by providing the original hashed password and a new hashed password.",
        "operationId": "resetPassword",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/employees_resetpassword_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Password successfully reset",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_3"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/employees/photo/{employee_id}": {
      "get": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "取得員工照片",
        "description": "Fetches the photo of the employee.",
        "operationId": "getEmployeePhoto",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "description": "The unique identifier for the employee.",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "12345"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Employee photo successfully retrieved",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "EmployeeController"
        ],
        "summary": "新增或修改員工照片",
        "description": "Allows an employee to upload a photo associated with their profile.",
        "operationId": "uploadEmployeePhoto",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "description": "The unique identifier for the employee.",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "12345"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/photo_employee_id_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Employee photo successfully uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_4"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": [
          "AuthController"
        ],
        "summary": "登入",
        "description": "Authenticates an employee and returns a JWT token along with employee information.",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth_login_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully logged in",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_5"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/access-logs/employees/{employee_id}": {
      "get": {
        "tags": [
          "AccessLogController"
        ],
        "summary": "取得員工某日打卡記錄",
        "description": "Fetches the access logs for a given employee and date.",
        "operationId": "getEmployeeAccessLogs",
        "parameters": [
          {
            "name": "employee_id",
            "in": "path",
            "description": "The unique identifier of the employee.",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string",
              "example": "12345"
            }
          },
          {
            "name": "date",
            "in": "query",
            "description": "The date for which the access logs are requested.",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "example": "2025-02-15"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Access logs successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_6"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/access-logs": {
      "get": {
        "tags": [
          "AccessLogController"
        ],
        "summary": "取得自己某日打卡記錄",
        "description": "Fetches the access logs for own and date.",
        "operationId": "getOwnAccessLogs",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "The date for which the access logs are requested.",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "example": "2025-02-15"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Access logs successfully retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_6"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "AccessLogController"
        ],
        "summary": "Add 打卡記錄",
        "description": "Adds a new access log for the employee based on the provided access time and gate ID.",
        "operationId": "addAccessLog",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/v1_accesslogs_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Access log successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_7"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "inline_response_200_5": {
        "type": "object",
        "properties": {
          "jwt_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..gT6zyksJdyxVbwODaGGsUpDwJSqbfz7csP1nMl52Hng"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "phone_number": {
            "type": "string",
            "example": "123-456-7890"
          },
          "job_title": {
            "type": "string",
            "example": "Software Engineer"
          },
          "organization_id": {
            "type": "string",
            "example": "ORG01"
          },
          "organization_name": {
            "type": "string",
            "example": "Engineering"
          }
        }
      },
      "v1_employees_body": {
        "required": [
          "email",
          "employee_id",
          "first_name",
          "hire_date",
          "hire_status",
          "is_admin",
          "job_title",
          "last_name",
          "organization_id",
          "phone_number"
        ],
        "type": "object",
        "properties": {
          "employee_id": {
            "type": "string",
            "example": "12345"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "johndoe@example.com"
          },
          "phone_number": {
            "type": "string",
            "example": 1234567890
          },
          "is_admin": {
            "type": "boolean",
            "example": false
          },
          "job_title": {
            "type": "string",
            "example": "Software Engineer"
          },
          "organization_id": {
            "type": "string",
            "example": "FIN1234"
          },
          "hire_date": {
            "type": "string",
            "format": "date",
            "example": "2025-03-23"
          },
          "hire_status": {
            "type": "string",
            "example": "active",
            "enum": [
              "active",
              "inactive",
              "onleave"
            ]
          }
        }
      },
      "inline_response_200_6": {
        "type": "object",
        "properties": {
          "logs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/inline_response_200_6_logs"
            }
          }
        }
      },
      "inline_response_200_6_logs": {
        "type": "object",
        "properties": {
          "log_id": {
            "type": "integer",
            "example": 1
          },
          "access_time": {
            "type": "string",
            "format": "date-time"
          },
          "direction": {
            "type": "string",
            "example": "in",
            "enum": [
              "in",
              "out"
            ]
          },
          "gate_name": {
            "type": "string",
            "example": "Main Gate"
          },
          "gate_type": {
            "type": "string",
            "example": "Main Entrance"
          }
        }
      },
      "inline_response_200_7": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Access log successfully created"
          }
        }
      },
      "employees_employee_id_body": {
        "required": [
          "email",
          "first_name",
          "hire_date",
          "hire_status",
          "is_admin",
          "job_title",
          "last_name",
          "organization_id",
          "phone_number"
        ],
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "phone_number": {
            "type": "string",
            "example": "123-456-7890"
          },
          "is_admin": {
            "type": "boolean",
            "example": false
          },
          "organization_id": {
            "type": "string",
            "example": "ORG01"
          },
          "job_title": {
            "type": "string",
            "example": "Software Engineer"
          },
          "hire_date": {
            "type": "string",
            "format": "date",
            "example": "2022-01-15"
          },
          "hire_status": {
            "type": "string",
            "example": "active",
            "enum": [
              "active",
              "inactive",
              "onleave"
            ]
          }
        }
      },
      "inline_response_200_1": {
        "type": "object",
        "properties": {
          "employee_id": {
            "type": "string",
            "example": "12345"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "phone_number": {
            "type": "string",
            "example": "123-456-7890"
          },
          "is_manager": {
            "type": "boolean",
            "example": true
          },
          "is_admin": {
            "type": "boolean",
            "example": false
          },
          "job_title": {
            "type": "string",
            "example": "Software Engineer"
          },
          "organization_id": {
            "type": "string",
            "example": "FIN001"
          },
          "organization_name": {
            "type": "string",
            "example": "Engineering"
          },
          "hire_status": {
            "type": "string",
            "example": "active"
          },
          "hire_date": {
            "type": "string",
            "format": "date",
            "example": "2022-01-01"
          }
        }
      },
      "inline_response_200": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "inline_response_200_2": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Employee information successfully updated."
          }
        }
      },
      "photo_employee_id_body": {
        "type": "object",
        "properties": {
          "photo": {
            "type": "string",
            "description": "The photo file of the employee to be uploaded.",
            "format": "binary"
          }
        }
      },
      "auth_login_body": {
        "required": [
          "employee_id",
          "hashed_password"
        ],
        "type": "object",
        "properties": {
          "employee_id": {
            "type": "string",
            "example": "12345"
          },
          "hashed_password": {
            "type": "string",
            "example": "5d41402abc4b2a76b9719d911017c592"
          }
        }
      },
      "inline_response_200_3": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Password successfully reset."
          }
        }
      },
      "v1_accesslogs_body": {
        "required": [
          "access_time",
          "employee_id",
          "gate_id"
        ],
        "type": "object",
        "properties": {
          "employee_id": {
            "type": "string",
            "example": "101"
          },
          "access_time": {
            "type": "string",
            "format": "date-time"
          },
          "gate_id": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "inline_response_200_4": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Employee photo successfully uploaded."
          }
        }
      },
      "employees_resetpassword_body": {
        "required": [
          "new_hashed_password",
          "original_hashed_password"
        ],
        "type": "object",
        "properties": {
          "original_hashed_password": {
            "type": "string",
            "example": "oldpasswordhashedstring"
          },
          "new_hashed_password": {
            "type": "string",
            "example": "newpasswordhashedstring"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}